{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6"],
    "types": ["reflect-metadata", "jest"],
    "typeRoots": ["./node_modules/@types"],
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"],
  "baseUrl": "./"
}
